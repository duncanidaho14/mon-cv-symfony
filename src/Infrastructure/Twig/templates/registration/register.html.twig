{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-600 to-blue-400 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8 space-y-8">
        <div class="flex flex-col items-center">
            <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                <span class="text-white font-bold text-lg">EB</span>
            </div>
            <h2 class="mt-4 text-center text-3xl font-extrabold text-gray-900">Créer un compte</h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Remplissez le formulaire pour vous inscrire.
            </p>
        </div>

        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">{{ flash_error }}</div>
        {% endfor %}

        {% if app.user %}
            <div class="mb-3 text-green-700">
                Vous êtes déjà connecté en tant que <strong>{{ app.user.email }}</strong>.
                <a href="{{ path('cv_logout') }}" class="underline text-blue-600 hover:text-blue-800">Déconnexion</a>
            </div>
        {% endif %}

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
            <div>
                <label for="registrationForm_email" class="block text-sm font-medium text-gray-700">Adresse e-mail</label>
                {{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                        'autocomplete': 'email',
                        'required': true
                    }
                }) }}
                {{ form_errors(registrationForm.email) }}
            </div>
             <div>
                <label for="registrationForm_firstName" class="block text-sm font-medium text-gray-700">Prénom</label>
                {{ form_widget(registrationForm.firstName, {
                    'attr': {
                        'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                        'autocomplete': 'donne un prénom',
                        'required': true
                    }
                }) }}
                {{ form_errors(registrationForm.firstName) }}
            </div>
            <div>
                <label for="registrationForm_lastName" class="block text-sm font-medium text-gray-700">Nom</label>
                {{ form_widget(registrationForm.lastName, {
                    'attr': {
                        'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                        'autocomplete': 'new-password',
                        'required': true
                    }
                }) }}
                {{ form_errors(registrationForm.lastName) }}
            </div>
             <div>
                <label for="registrationForm_plainPassword" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                {{ form_widget(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                        'autocomplete': 'new-password',
                        'required': true
                    }
                }) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>
            <div class="flex items-center">
                {{ form_widget(registrationForm.agreeTerms, {
                    'attr': {
                        'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded mr-2'
                    }
                }) }}
                <label for="registrationForm_agreeTerms" class="block text-sm text-gray-900">
                    J'accepte les conditions d'utilisation
                </label>
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>
            <div>
                <button type="submit"
                    class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition">
                    Créer mon compte
                </button>
            </div>
        {{ form_end(registrationForm) }}

        <div class="mt-6 text-center text-sm text-gray-600">
            Déjà inscrit ?
            <a href="{{ path('cv_login') }}" class="font-medium text-indigo-600 hover:text-indigo-500">Se connecter</a>
        </div>
    </div>
</div>
{% endblock %}
